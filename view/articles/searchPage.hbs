<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nav Menu</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/css/searchPage.css">

</head>
<body>

<div class="main-container ">
    <div class="search-section mt-5">
  <div class="container">
    <h2 class="search-heading">Search for related articles</h2>
    <form class="search-form">
      
    </form>
    <div class="search-results">
      <ul class="search-results-list">
        <!-- Các kết quả tìm kiếm sẽ được hiển thị ở đây -->
      </ul>
    </div>
  </div>

  
</div>
 
<div class="search-info">
  <div class="results-count">
    <span>Display results for <b>"{{this.keyword}}"</b></span>
  </div>
  <div class="sorting">
    <span>Sorting by: </span>
    <select class="sort-select">
      <option value="newest">Newest</option>
      <option value="relevancy">Relevancy</option>
    </select>
  </div>
</div>
  
{{#if empty}}
  <div><h2 class="text-center mt-5">No search results available</h2></div>
  {{else}}
  {{#each this.articles}}
        <a href="{{#if is_premium}}/read/premium{{else}}/read{{/if}}?id={{id}}" style="text-decoration-thickness: 1px;color: inherit;">      
    <div class="related-articles" >
    <div class="article">
      <div class="article-image">
        <img src="{{extractFirstImage content}}" alt="Article Image">
      </div>
      <div class="article-info">
        <h3 class="article-title">{{title}}</h3><br/>
       
        <p class="article-description">{{summary}}</p>
         <p class="article-date">{{formatLongDate update_at}}</p>
         {{#if is_premium}}
            <span class="badge bg-warning text-dark" style="font-size: 12px;">
              <i class="fas fa-crown"></i> Premium
            </span>
       {{/if}}
      </div>
    </div>
    </div>
  </div>
  </a>
  {{/each}}
<div class="d-flex justify-content-center mt-5 mb-5"> 
    <ul class="pagination">
      <li class="page-item disabled">
        <a class="page-link">Previous</a>
      </li>
      {{#each this.pageNumbers}}
      {{#if active}}
      <li class="page-item active">
        <a class="page-link" href="#">{{value}}</a>
      </li>
      {{else}}
      <li class="page-item">
        <a class="page-link" href="?q={{../keyword}}&page={{value}}">{{value}}</a>
      </li>
      {{/if}}
      {{/each}}
      <li class="page-item">
        <a class="page-link" href="#">Next</a>
      </li>
    </ul>
  </div>
{{/if}}

</div>



<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha384-ZvpUoO/+PpLXR1lu4jmpXWu80pZlYUAfxl5NsBMWOEPSjUn/6Z/hRTt8+pR6L4N2" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-4qpa6bKcW/U8p5+GFiYj6p5zocpcfB8rDZRm4+GU2hrfu5DzN07mK2SHQr90qJpD2y60PZbTJx8uT3KzXqTjlC+Zr1rNPtAXsp/lA7OnxRfO1Q3mKZarVqu1K4xkQ/2On"
  crossorigin="anonymous"></script>
 <script src="<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>"></script>
<script src="/js/searchPage.js"></script>

</body>
</html>