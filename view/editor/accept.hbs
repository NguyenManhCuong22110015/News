<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accept Article</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery UI CSS for Datepicker -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <style>
        .container {
            max-width: 600px;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Accept Article</h1>
        <form method="post" action="/editor/accept/{{article.id}}" id="accept-article-form">
            <!-- Article ID (Hidden) -->
            <input type="hidden" name="article_id" value="{{article.id}}">

            <!-- Tag Dropdown -->
            <div class="form-group">
                <label for="tag">Tag</label>
                <select class="form-control" name="tag_id" id="tag" required>
                    <option value="">Select a Tag</option>
                    {{#each tags}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>

            <!-- Category Dropdown -->
            <div class="form-group">
                <label for="category">Category</label>
                <select class="form-control" name="category_id" id="category" required>
                    <option value="">Select a Category</option>
                    {{#each categories}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>

            <!-- Publish Date Picker -->
            <div class="form-group">
                <label for="publish_date">Publish Date</label>
                <input type="text" class="form-control" name="publish_date" id="publish_date" placeholder="Select publish date" required>
            </div>

            <div class="form-footer">
                <a href="/editor" class="btn btn-outline-secondary">Return</a>
                <button type="submit" class="btn btn-primary">Accept Article</button>
            </div>
        </form>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery UI JS for Datepicker -->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize datepicker for publish date
            $('#publish_date').datepicker({
                dateFormat: 'yy-mm-dd',  // Format: YYYY-MM-DD
                minDate: 0,             // Prevent past dates
            });

            // Debugging: Log form data before submission
            $('#accept-article-form').on('submit', function (e) {
                console.log('Form Data:');
                console.log('Article ID:', $('input[name="article_id"]').val());
                console.log('Tag ID:', $('#tag').val());
                console.log('Category ID:', $('#category').val());
                console.log('Publish Date:', $('#publish_date').val());
            });
        });
    </script>
</body>
</html>